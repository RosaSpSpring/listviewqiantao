<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_child_child"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_child_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textColor="#707070"
            android:textSize="13sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_child_daici"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="P2"
            android:textColor="#707070"
            android:textSize="13dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_child_caozuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="传代"
            android:textColor="#707070"
            android:textSize="13dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_child_pingshu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textColor="#707070"
            android:textSize="13dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_child_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2019/06/30"
            android:textColor="#707070"
            android:textSize="13dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_child_operator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="杨"
            android:textColor="#707070"
            android:textSize="13dp"
            android:textStyle="bold"
            />


    </LinearLayout>


</LinearLayout>